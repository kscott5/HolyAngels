{
    "compileOnSave": true,
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        //"outDir": "./wwwroot/js",
        "rootDir": "./",
        "types": [
            "vue-typescript-import-dts"
        ],
        "noImplicitAny": false,
        "strict": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom","es5", "es2015.promise"
        ]
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "wwwroot/js"
    ],
    "exclude": [
        "node_modules", "wwwroot/lib"
    ]
}